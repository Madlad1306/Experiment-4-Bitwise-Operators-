#include <iostream>
using namespace std;
int main() {
    int a= 3;
    int b= 4;
    
    int bitwise_and= a&b;
    cout<<"Bitwise AND is:"<<bitwise_and<<endl;
    
    int bitwise_or= a|b;
    cout<<"Bitwise OR is:"<<bitwise_or<<endl;
    
    int bitwise_xor= a^b;
    cout<<"Bitwise XOR is:"<<bitwise_xor<<endl;
    
    int bitwise_not= ~a;
    cout<<"Bitwise NOT is:"<<bitwise_not<<endl;
    
    return 0;
}

//Output:
//Bitwise AND is:0
//Bitwise OR is:7
//Bitwise XOR is:7
//Bitwise NOT is:-4


//=== Code Execution Successful ===
